<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout style="@style/TitleBar">
		<Button android:text="GeoCam Talk" android:layout_width="@dimen/logo_title_width"
			android:layout_height="fill_parent" android:id="@+id/title_button"
			android:onClick="onGoHomeClick"></Button>

	</LinearLayout>
	<EditText android:id="@+id/newTalkTextInput"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_weight="1" android:imeOptions="actionSend|flagNoEnterAction"
		android:gravity="top" android:maxLines="4" android:maxLength="1024"
		android:inputType="text|textCapSentences|textAutoCorrect|textMultiLine|textShortMessage" />
	<LinearLayout android:orientation="horizontal"
		android:layout_height="wrap_content" android:layout_width="fill_parent">
		<Button android:id="@+id/record_button" android:text="Record Audio"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignWithParentIfMissing="true"
			android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
			android:layout_alignParentBottom="true" android:onClick="onRecordClick" />
		<Button android:id="@+id/playback_button" android:text="Playback Audio"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignWithParentIfMissing="true"
			android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
			android:layout_alignParentBottom="true" android:onClick="onPlaybackClick" />
		<Button android:id="@+id/send_button" android:text="Send"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignWithParentIfMissing="true"
			android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
			android:layout_alignParentBottom="true" android:onClick="onSendClick" />
	</LinearLayout>
</LinearLayout>
